	{% block head %}

	{% endblock %}
	</head>
{% endblock %}

	<body class="bg-primary {{body_class}} container-fluid m-0 p-0" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
				{% include 'navbar.twig' %}
			{% endblock %}
		</header>
		<section id="content" role="main" class="content-wrapper container-fluid m-0 p-0">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
				{% include 'footer.twig' %}
		{% endblock %}
	</body>
</html>
