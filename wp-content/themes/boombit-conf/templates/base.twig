{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}

	{% endblock %}
	</head>
{% endblock %}

	<body class="bg-primary {{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header" >
			{% block header %}
				{% include 'navbar.twig' %}
				{% block hero %}
					<section class="hero text-white container-fluid conference-banner" style="background-image:  url('{% if post.thumbnail.src('large') %}{{post.thumbnail.src('large')}}{% else %}https://mdbcdn.b-cdn.net/img/new/slides/041.webp{% endif %}'); ">
						<div class="row justify-content-around align-items-center h-100 overlay-dark">
						    <div class="col-12 text-center text-capitalize">
						        <h1>{{ post.title }}</h1>
							</div>
						</div>
    				</section>
			{% endblock %}
			{% endblock %}
		</header>
		<section id="content" role="main" class="content-wrapper container-fluid m-0">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>
		{% block footer %}
				{% include 'footer.twig' %}
		{% endblock %}
	</body>
</html>
